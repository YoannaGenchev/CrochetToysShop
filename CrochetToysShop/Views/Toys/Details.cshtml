@using CrochetToysShop.Extensions
@model CrochetToysShop.Models.ViewModels.Toys.ToyDetailsViewModel

@{
    ViewData["Title"] = "Детайли";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<h2 class="mb-4">@Model.Name</h2>

<div class="row g-4 mb-5">
    <div class="col-md-6">
        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl"
                 asp-append-version="true"
                 alt="@Model.Name"
                 class="img-fluid rounded border"
                 style="width: 100%; object-fit: contain; background-color: #f8f9fa;" />

        }
        else
        {
            <div class="alert alert-secondary">Няма снимка.</div>
        }
    </div>

    <div class="col-md-6">
        <dl class="row mt-2">
            <dt class="col-sm-4">Категория</dt>
            <dd class="col-sm-8">
                <span class="badge bg-secondary">@Model.CategoryName</span>
            </dd>

            <dt class="col-sm-4">Цена</dt>
            <dd class="col-sm-8 fw-bold fs-5">@Model.Price.ToEuro()</dd>

            <dt class="col-sm-4">Размер</dt>
            <dd class="col-sm-8">@Model.SizeCm см</dd>

            <dt class="col-sm-4">Трудност</dt>
            <dd class="col-sm-8">@Model.Difficulty</dd>

            <dt class="col-sm-4">Наличност</dt>
            <dd class="col-sm-8">
                @if (Model.IsAvailable)
                {
                    <span class="badge bg-success">В наличност</span>
                }
                else
                {
                    <span class="badge bg-danger">Изчерпано</span>
                }
            </dd>
        </dl>

        <hr />

        <p class="text-muted">@Model.Description</p>

        <div class="mt-4 d-flex flex-wrap gap-2">
            <a asp-action="Index" class="btn btn-secondary">Назад</a>
            @if (Model.IsAvailable)
            {
                <a asp-action="Order" asp-route-id="@Model.Id" class="btn btn-success">Поръчай</a>
            }
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Промени</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Изтрий</a>
            }
        </div>
    </div>
</div>